{% schema %}
{
  "name": "Dropdeck Script",
  "target": "head",
  "settings": [
    {
      "type": "paragraph",
      "content": "ropdeck offers two preorder solutions: a manual setup (recommended) and this script. The manual guide at docs.dropdeck.com/preorders/shopify requires technical knowledge but offers better reliability. This script provides a simpler setup but may have compatibility issues with certain themes. Need help with the manual setup? Contact support@dropdeck.com."
    },
    {
      "type": "checkbox",
      "id": "enable_preorder_script",
      "label": "Enable Preorder Script"
    }
  ]
}
{% endschema %}

{% if section.settings.enable_preorder_script %}
  <script class="dropdeck-script" src="{{ 'dropdeck-preorder-script.js' | asset_url }}" defer></script>
{% endif %}
