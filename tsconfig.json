{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "extensions/dropdeck-preorder-purchase-options/src/mutations/create-sp-group.ts", "extensions/dropdeck-preorder-purchase-options/src/mutations/update-preorder-sp-group.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
